<link rel="stylesheet" href="/styles/compose.css">

<%- include('partials/header') %>

<div class="container form-container">
    <h1><%= heading %></h1>
    
    <form action="<%= post ? '/edit/' + post.id : '/submit' %>" method="POST">
        <div class="form-group-container">
            <div class="form-group">
                <label>Title</label>
                <input type="text" name="title" value="<%= post ? post.title : '' %>" required>
            </div>
            
            <div class="form-group">
                <label>Author</label>
                <input type="text" name="author" value="<%= post ? post.author : '' %>" required>
            </div>
            
            <div class="form-group">
                <label>Content</label>
                <textarea name="content" rows="5" required><%= post ? post.content : '' %></textarea>
            </div>
        </div>
        
        <button class="submit-button" type="submit" onclick="alert('Your blog post has been submitted!')">
            <%= submitLabel %>
        </button>
    </form>
</div>

<%- include('partials/footer') %>